<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GolfController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Golf Scheduling App" />

    <TextField fx:id="memberNameField" promptText="Enter Member Name" />
    <TextField fx:id="teeTimeField" promptText="Enter Tee Time (e.g., 10)" />

    <Button onAction="#onReserveButtonClick" text="Reserve Tee Time" />
    <Button onAction="#onCancelButtonClick" text="Cancel Reservation" />

    <Label text="Current Reservations:" />
    <ListView fx:id="reservationsListView" prefHeight="150" />

    <Label fx:id="welcomeText" style="-fx-text-fill: green;" text="Status: Ready" />
   <BorderPane prefHeight="200.0" prefWidth="200.0" />
</VBox>

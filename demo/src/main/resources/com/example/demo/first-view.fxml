<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GolfController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Text style="-fx-font-size: 20; -fx-font-weight: bold;" text="Reserve or Cancel a Tee Time" />

    <TableView fx:id="teeTimeTable" prefHeight="200" prefWidth="600">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="dateColumn" text="Date" />
            <TableColumn fx:id="timeColumn" text="Time" />
        </columns>
    </TableView>

    <TextField fx:id="nameField" promptText="Enter Your Name" />
    <DatePicker fx:id="dateTimeField" promptText="Select Date" />
    <TextField fx:id="timeField" promptText="Enter Time (HH:mm)" />

    <Button onAction="#confirmReservation" text="Confirm Reservation" />
    <Button onAction="#cancelReservation" text="Cancel Reservation" />
</VBox>

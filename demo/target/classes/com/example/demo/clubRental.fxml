<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.ClubRentalController" spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Text text="Rent a Set of Golf Clubs" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    <ListView fx:id="clubListView" prefHeight="200" prefWidth="300"/>
    <TextField fx:id="rentalQuantityField" promptText="Enter quantity to rent"/>
    <Button text="Rent Selected Club" onAction="#rentClub"/>
</VBox>
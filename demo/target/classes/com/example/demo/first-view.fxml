<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="15" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.GolfController">

    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>

    <DatePicker fx:id="datePicker" onAction="#onDateSelected"/>
    <ListView fx:id="teeTimesListView" prefHeight="200" prefWidth="300"/>
    <TextField fx:id="playerNameField" promptText="Enter player name"/>
    <Button text="Book Tee Time" onAction="#onBookTeeTime"/>
    <Button text="Cancel Tee Time" onAction="#onCancelTeeTime"/>
    <Button text="Show Players" onAction="#onShowPlayers"/>
    <Button onAction="#goToHomeScreen" text="Home" />
    <Button text="Logout" onAction="#logout" />



    <Label text="Status: Ready" fx:id="statusLabel" style="-fx-font-size: 14px; -fx-text-fill: green;" />
</VBox>
